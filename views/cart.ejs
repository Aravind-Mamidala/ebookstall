<% layout('/layouts/boilerplate') %>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Shopping Cart</title>
    <link rel="stylesheet" href="/css/cart.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">

<div class="container mt-5">
    <h2 class="text-center mb-4">üõí Your Shopping Cart</h2>

    <% if (cart && cart.items.length > 0) { %>
        <div class="card shadow-lg p-4">
            <table class="table table-hover text-center">
                <thead class="table-dark">
                    <tr>
                        <th>Book</th>
                        <th>Price</th>
                        <th>Quantity</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% cart.items.forEach(item => { %>
                        <tr>
                            <td><strong><%= item.bookId.title %></strong></td>
                            <td class="text-success">‚Çπ<%= item.bookId.price %></td>
                            <td><%= item.quantity %></td>
                            <td>
                                <form action="/cart/remove/<%= item.bookId._id %>" method="POST">
                                    <button type="submit" class="btn btn-danger btn-sm">Remove</button>
                                </form>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>

            <div class="d-flex justify-content-between align-items-center mt-4">
                <h4>Total Price: <span class="text-primary fw-bold">‚Çπ <%= cart.totalPrice %></span></h4>
                <a href="/checkout" class="btn btn-success btn-lg">Proceed to Checkout</a>
            </div>
        </div>
    <% } else { %>
        <div class="alert alert-warning text-center">Your cart is empty üõçÔ∏è</div>
    <% } %>

    <div class="text-center mt-4">
        <a href="/books" class="btn btn-outline-primary btn-lg">‚¨ÖÔ∏è Continue Shopping</a>
    </div>
</div>

</body>
</html>
<style>

body {
    font-family: 'Poppins', sans-serif;
}

.container {
    max-width: 800px;
}

.card {
    border-radius: 12px;
}

.table th, .table td {
    vertical-align: middle;
}

.text-primary {
    font-size: 22px;
}
</style>